{
	"name": "scriptotek/bibcraft",
	"description": "Bibcraft, mobile lending system.",
	"keywords": ["framework", "laravel"],
	"require": {
		"laravel/framework": "4.1.*",
		"way/generators": "dev-master",
		"civocr/nexmo-php-lib": "dev-master",
		"willdurand/negotiation": "1.2.*",
        "schickling/backup": "dev-master",
        "danmichaelo/ncip": "dev-master",
		"rmccue/requests": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
